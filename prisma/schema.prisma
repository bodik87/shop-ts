generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  name         String?
  registeredAt DateTime @default(now())
}

model Product {
  id        String   @id @default(uuid())
  title     String
  price     Float
  oldPrice  Float? 
  brand     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
